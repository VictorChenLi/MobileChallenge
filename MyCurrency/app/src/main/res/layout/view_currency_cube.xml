<layout>
    <data class="com.victorchen.mycurrency.ui.binding.ViewCurrencyCubeBinding">
        <variable
            name="currencyName"
            type="String"/>
        <variable
            name="convertValue"
            type="Float"/>
        <variable
            name="updateDate"
            type="String"/>

    </data>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/currency_cube_padding"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/currency_name"
            android:text="@{currencyName}"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/convert_value"
            android:text="@{String.valueOf(convertValue)}"
            android:textSize="24dp"
            android:textAlignment="center"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/last_update_date"
            android:text="@{updateDate}"
            android:textSize="12dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>
