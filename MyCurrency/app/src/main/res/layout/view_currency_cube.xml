<layout>

    <data class="com.victorchen.mycurrency.ui.binding.ViewCurrencyCubeBinding">

        <variable
            name="currencyName"
            type="String" />

        <variable
            name="convertValue"
            type="Float" />

        <variable
            name="updateDate"
            type="String" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/currency_name"
            android:text="@{currencyName}"
            android:textSize="40sp"
            android:textColor="@color/colorStable"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/convert_value"
            android:text="@{String.valueOf(convertValue)}"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/last_update_date"
            android:text="@{updateDate}"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</layout>
